        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>1.1.0</Version>
        <Title>KutCode.Security.Ldap.DependencyInjection</Title>
        <Description>Dependency Injection methods for KutCode LDAP repository</Description>
        <Copyright>Kutumov Nikita</Copyright>
        <PackageProjectUrl>https://github.com/hamaronooo/KutCode.Security.Ldap</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/hamaronooo/KutCode.Security.Ldap/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/hamaronooo/KutCode.Security.Ldap</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
      <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
      <PackageReference Include="KutCode.Security.Ldap" Version="1.*.*" />
    </ItemGroup>

</Project>
